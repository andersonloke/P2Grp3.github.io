@{
    ViewData["Title"] = "Login Page";
}

<link rel="stylesheet" href="~/css/login.css" />

<div class="main-container row">
    <div class="main-card col-md-12">
        <form method="post" action="~/Home/Login">
            <div class="row header-container">

            </div>

            <fieldset class="loginFieldset">
                <div class="form-group">
                    <input class="form-control" type="email" />
                </div>

                <div class="form-group">
                    <button type="button" id="passwordbutton" onclick="showpassword()"><i class="fa fa-eye" id="eye"></i></button>

                    <input class="form-control" type="password" name="txtPassword" placeholder="Password" id="password" required />
                </div>

                <div style="margin-bottom: 10px">
                    <span style="color: red;">@TempData["Message"]</span>
                </div>

                <div class="form-space"></div>

                <div class="form-group">
                    <input type="submit" value="Log In" id="login" class="btn" />
                </div>

                <div class="form-group">
                    <a class="btn" id="signup" asp-action="Create" asp-controller="Customer" style="line-height: 2.1;">
                        Sign Up
                    </a>
                </div>
            </fieldset>
        </form>
    </div>
</div>

}
